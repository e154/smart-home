.form-group
    %laber {{'flow.name' | translate}}*
    %input.form-control(ng-model="flow.flow.name")

.form-group
    %laber {{'flow.status' | translate}}
    %select.form-control(ng-model="flow.flow.status")
        %option(value="enabled")
            {{'flow.enabled' | translate}}
        %option(value="disabled")
            {{'flow.disabled' | translate}}

.form-group
    %laber {{'flow.workflow' | translate}}
    %select.form-control(ng-model="flow.flow.workflow_id" ng-options="wf.id as wf.name for wf in flow.workflows")

.form-group
    %laber {{'flow.description' | translate}}
    %textarea.form-control(ng-model="flow.flow.description" rows="10" )

