.row
  .col-md-6
    %h3 Редактирование процесса

.row
  .col-md-6
    %div(ng-include="'/flow/templates/_flow_form.html'")
.row
  .col-md-6
    .pull-right
      %a.btn.btn-danger(href="" role="button" ng-click="flow.remove()")
        {{'Delete' | translate}}
      %a.btn.btn-default(href="" role="button" ui-sref="dashboard.flow.index")
        {{'Cancel' | translate}}
      %a.btn.btn-primary(href="" role="button" ng-click="flow.submit()")
        {{'Update' | translate}}