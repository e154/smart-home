.panel.panel-default.map-elements-editor
  .panel-heading
    {{'Elements' | translate}}
  .panel-body
    .form-group
      %a(href="#" ng-click="addElement()")
        .fa.fa-plus
        &nbsp;
        {{'Add element' | translate}}

    .form-group
      %ul.list-group(ng-sortable="{ group: 'elements', animation: 0, handle: '.map-element-handler', onSort: up}")
        %li.list-group-item(ng-repeat="element in current_layer.elements track by $index" ng-click="selectElement(element, $index)" ng-class="{'selected': element == current_element}")
          .map-element-header
            %span.map-element-handler
