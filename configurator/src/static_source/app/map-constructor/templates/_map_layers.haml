.panel.panel-default.map-layers-editor
  .panel-heading
    {{'Layers' | translate}}
  .panel-body
    .form-group
      %a(href="#" ng-click="addLayer()")
        .fa.fa-plus
        &nbsp;
        {{'Add layer' | translate}}

    .form-group
      %ul.list-group(ng-sortable="{ group: 'layers', animation: 0, handle: '.map-layer-handler', onSort: up}")
        %li.list-group-item(ng-repeat="layer in map.model.layers track by $index" ng-click="selectLayer(layer, $index)" ng-class="{'selected': layer == current_layer}")
          %span.map-layer-handler
            â˜°
          %span.map-layer-subtitle
            %input.map-layer-title(type="text" name="subtitle" ng-model="layer.name" ng-click="$event.stopPropagation()")
