.row
  .col-md-6
    %h3 {{'node.edit_form' | translate}}

.row
  .col-md-6
    %div(ng-include="'/node/templates/_node_form.html'")
.row
  .col-md-6
    .pull-right
      %a.btn.btn-danger(href="" role="button" ng-click="node.remove()")
        {{'Delete' | translate}}
      %a.btn.btn-default(href="" role="button" ui-sref="dashboard.node.index")
        {{'Cancel' | translate}}
      %a.btn.btn-primary(href="" role="button" ng-click="node.submit()")
        {{'Update' | translate}}