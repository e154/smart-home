.form-group
  %laber {{'user.nickname' | translate}}*
  %input#nickname.form-control(ng-model="user.nickname")

.form-group
  %laber {{'user.first_name' | translate}}*
  %input.form-control(ng-model="user.first_name")

.form-group
  %laber {{'user.last_name' | translate}}*
  %input.form-control(ng-model="user.last_name")

.form-group
  %laber {{'user.email' | translate}}*
  %input.form-control(ng-model="user.email")

.form-group
  %laber {{'user.avatar' | translate}}*
  .map-preview-img.relative
    %a(ng-href="{{user.avatar.url}}" rel="gallery" title="original" ng-if="user.avatar.url" fancybox="true")
      %img(ngf-thumbnail="user.avatar.url || '/thumb.jpg'" alt="" title="")
    %a.delete.button(href="#" ng-click="removeAvatar()" ng-if="user.avatar.url")
      .cross

    %button.btn.btn-default.custom-upload.full-width(file-manager="{}" ng-model="user.avatar" ng-if="!user.avatar.url")
      .fa.fa-upload
      &nbsp;
      {{'set image' | translate}}

.form-group
  %laber {{'user.email' | translate}}*
  %input.form-control(ng-model="user.email")

.row
  .col-lg-12
    .form-group
      {{'user.set_password' | translate}}

.row
  %password-check(nickname="input#nickname" password-input="input#password" confirm-input="input#password_repeat" password-recommendation="#pass-recommendation" password-confirm-recommendation="#pass-confirm-recommendation" strength-recommendation="#strength-recommendation" auto_disable="user.isNew" submit_button="button.submit_button")
  .col-lg-6
    .form-group
      %laber {{'user.password' | translate}}*
      %input#password.form-control(ng-model="user.password")

  .col-lg-6
    .form-group
      #pass-recommendation
      .clearfix

.row
  .col-lg-6
    .form-group
      %laber {{'user.password_repeat' | translate}}*
      %input#password_repeat.form-control(ng-model="user.password_repeat")

  .col-lg-6
    .form-group
      #pass-confirm-recommendation
      .clearfix

.row
  .col-lg-12
    .form-group
      #strength-recommendation
      .clearfix
